<?xml version="1.0"?>
<recovery>
	<details>
		<resolution width="1080" height="1920"/>
		<author>TeamWin</author>
		<title>TWRP</title>
		<description>splash screen</description>
		<themeversion>3</themeversion>
	</details>

	<resources>
		<font name="font_s" filename="DroidSansFallback.ttf" size="54"/>
		<font name="font_l" filename="DroidSansFallback.ttf" size="60"/>
		<font name="font_h" filename="DroidSansFallback.ttf" size="80"/>
		<image name="splashlogo" filename="splashlogo" retainaspect="1"/>
		<image name="lr-logo" filename="lr-logo" retainaspect="1"/>
	</resources>

	<variables>
		<variable name="screen_width" value="1080"/>
		<variable name="screen_height" value="1920"/>
		<variable name="background_color" value="#222222"/>
		<variable name="header_color" value="#555555"/>
		<variable name="accent_color" value="#0090CA"/>
	</variables>

	<pages>
		<page name="splash">
			<background color="%background_color%"/>

			<image>
				<image resource="splashlogo"/>
				<placement x="540" y="456" placement="4"/>
			</image>

			<image>
				<image resource="lr-logo"/>
				<placement x="540" y="960" placement="4"/>
			</image>

			<text color="%accent_color%">
				<font resource="font_l"/>
				<placement x="540" y="1034" placement="5"/>
				<text>                   体验最好用的REC</text>
			</text>

			<text color="%accent_color%">
				<font resource="font_h"/>
				<placement x="540" y="1526" placement="5"/>
				<text>%tw_device_name%</text>
			</text>

			<text color="%accent_color%">
				<font resource="font_s"/>
				<placement x="540" y="1648" placement="5"/>
				<text>TWRP %tw_version%</text>
			</text>
		</page>
	</pages>
</recovery>

